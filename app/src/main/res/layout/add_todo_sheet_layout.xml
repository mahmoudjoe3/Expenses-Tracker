<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/edit_user_name_layout_inner"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:background="@drawable/bottom_sheet_dialoge"
    android:padding="@dimen/standered_margin">
<RelativeLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    >
    <View android:id="@+id/v"
        android:layout_width="50dp"
        android:layout_height="3dp"
        android:layout_centerHorizontal="true"
        android:background="@color/colorHint"
        android:layout_marginBottom="@dimen/standered_margin"
        />
    <Button android:id="@+id/sheet_save"
        android:layout_width="wrap_content"
        android:layout_height="40dp"
        android:background="@drawable/button_shap_3"
        android:layout_alignParentEnd="true"
        android:layout_below="@id/v"
        android:textColor="@color/colorFGWhite"
        android:text="@string/save" />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/v"
        android:text="@string/enter_your_todo_note"
        android:textAppearance="@style/TextAppearance.AppCompat.Widget.ActionMode.Subtitle" />

    <EditText android:id="@+id/sheet_note"
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:hint="@string/note"
        android:layout_below="@id/sheet_save"
        android:gravity="bottom"
        android:layout_marginTop="@dimen/standered_margin"
        android:textAppearance="@style/TextAppearance.AppCompat.Widget.ActionMode.Subtitle"
        android:textColor="@color/colorBlack" />

</RelativeLayout>

</LinearLayout>