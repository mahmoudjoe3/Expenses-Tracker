<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/edit_user_name_layout_inner"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:background="@drawable/bottom_sheet_dialoge"
    android:padding="@dimen/standered_margin">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Enter your ToDo Note"
        android:textAppearance="@style/TextAppearance.AppCompat.Widget.ActionMode.Subtitle" />

    <EditText android:id="@+id/sheet_note"
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:hint="Note "
        android:gravity="bottom"
        android:layout_marginTop="@dimen/standered_margin"
        android:textAppearance="@style/TextAppearance.AppCompat.Widget.ActionMode.Subtitle"
        android:textColor="@color/colorBlack" />
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="@dimen/standered_margin"
        android:gravity="end">
        <Button android:id="@+id/sheet_cancel"
            android:layout_width="wrap_content"
            android:layout_height="40dp"
            android:background="@drawable/button_shap"
            android:layout_marginEnd="@dimen/standered_margin"
            android:text="Cancel"
        />
        <Button android:id="@+id/sheet_save"
            android:layout_width="wrap_content"
            android:layout_height="40dp"
            android:background="@drawable/button_shap_3"
            android:textColor="@color/colorFGWhite"
            android:text="Save" />
    </LinearLayout>

</LinearLayout>